<%= form_with model: [:lot, @event] do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lot_event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- <div class="field">
    <%= form.label :lot_id %>
    <%= form.text_field :lot_id %>
  </div> -->

  <div class="field">
    <%= form.label :date_parking_start %>
    <%= form.text_field :date_parking_start, id: "init_date_picker" , class: 'datepicker'%>
  </div>

  <div class="field">
    <%= form.label :date_parking_end %>
    <%= form.text_field :date_parking_end, id: "end_date_picker" , class: 'datepicker' %>
  </div>

  <div class="field">
    <%= form.label :car_id %>
    <%= form.select :car_id, options_for_select(current_user.cars.map{|s|[s.plate,s.id]}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
